    <select id="getTodayLeague" parameterType="string" resultType="string">
        select league_abb_name from sp_match_info where exact_date = #{date}
    </select>

    <select id="getTodayHomeTeam" parameterType="string" resultType="string">
        select home_team_abb_name from sp_match_info where exact_date = #{date}
    </select>

    <select id="getTodayAwayTeam" parameterType="string" resultType="string">
        select awa_team_abb_name from sp_match_info where exact_date = #{date}
    </select>

    <insert id="insertSPMatchInfos">
        insert into sp_match_info(
             match_num,
             league_abb_name,
             match_date,
             match_time,
             home_team_abb_name,
             awa_team_abb_name,
             win,
             draw,
             lose,
             handicap,
             handicap_win,
             handicap_draw,
             handicap_lose,
             s0,
             s1,
             s2,
             s3,
             s4,
             s5,
             s6,
             s7,
            create_time,
            exact_date
             )
            values
        <foreach item="list" index="index" collection="list" separator=",">
            (#{list.matchNum},
            #{list.leagueAbbName},
            #{list.matchDate},
            #{list.matchTime},
            #{list.homeTeamAbbName},
            #{list.awaTeamAbbName},
            #{list.win},
            #{list.draw},
            #{list.lose},
            #{list.handicap},
            #{list.handicapWin},
            #{list.handicapDraw},
            #{list.handicapLose},
            #{list.s0},
            #{list.s1},
            #{list.s2},
            #{list.s3},
            #{list.s4},
            #{list.s5},
            #{list.s6},
            #{list.s7},
            #{list.createTime},
            #{list.exactDate})
        </foreach>
    </insert>
    <insert id="insertSPMatchInfo">
        insert into sp_match_info(
        match_num,
        league_abb_name,
        match_date,
        match_time,
        home_team_abb_name,
        awa_team_abb_name,
        win,
        draw,
        lose,
        handicap_win,
